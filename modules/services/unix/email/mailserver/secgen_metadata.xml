<?xml version="1.0"?>

<service xmlns="http://www.github/cliffe/SecGen/service"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.github/cliffe/SecGen/service">
  <name>Postfix/dovecott Mail Server</name>
  <author>Michael Oultram</author>
  <author>Z. Cliffe Schreuders</author>
  <module_license>Apache v2</module_license>
  <description>Installs and configures a postfix/dovecott server.</description>

  <type>mail_server</type>
  <platform>linux</platform>

  <read_fact>server_ip</read_fact>

  <default_input into="server_ip">
    <value>localhost</value>
  </default_input>
</service>
